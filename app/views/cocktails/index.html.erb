<h1>Get Your Drank On</h1>

<ul>
<%@cocktails.each do |cocktail| %>
<h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
  <%= link_to "Edit Cocktail", edit_cocktail_path(cocktail)%>
  <%= link_to ('<i class="fas fa-trash"></i>').html_safe, cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure you want to delete" + cocktail.name } %>
<% end %>
</ul>
<p><%= link_to 'Still Thirsty?', 'cocktails/new' %></p>